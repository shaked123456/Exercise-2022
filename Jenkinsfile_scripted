node {
	checkout scm
	withDockerContainer(args: '--privileged --add-host artifactory-tlv:192.168.1.242', image: 'zip-job-docker:v1'){
	     
	stage('Build Stage') {    
                sh 'python3 zip_job.py'
         }

        stage('Upload zip files to Artifactory') {
                def server = Artifactory.newServer url: 'http://artifactory-tlv:8082/artifactory/', username: 'admin', password: 'Nopass5!'
                def uploadSpec = """{
                  "files": [
                    {
                      "pattern": "*1.2.0.zip",
                      "target": "binary-storage/VERSION/"
                    }
                  ]
                }"""
                server.upload spec: uploadSpec
            }	    
}
try {
    throw new Exception('fail!')
} catch (all) {
    currentBuild.result = "FAILURE"
} finally {
     node('master') {
        step([$class: 'Mailer', notifyEveryUnstableBuild: true, recipients: 'shaked@wizards.co.il', sendToIndividuals: true])
    }   
}
}
